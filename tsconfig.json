{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
